{
	"include": [
        "./src/assets/*",
        "./src/components/**/*",
        "./src/pages/**/*",
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "es2017"
        ],
        "allowJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
		"typeRoots": ["module_declarations"]
    }
}
